<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="create-payment-consumer-user" author="dogancaglar">
        <sql>
            CREATE USER "payment-consumer" WITH PASSWORD 'payment-consumer';
        </sql>
    </changeSet>

    <changeSet id="grant-payment-consumer-permissions" author="dogancaglar">
        <sql>
            GRANT SELECT,INSERT, UPDATE, DELETE ON ALL TABLES IN SCHEMA public TO "payment-consumer";
        </sql>
    </changeSet>

</databaseChangeLog>