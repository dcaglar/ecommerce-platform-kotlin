<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="2025-10-27-ledger-entry-tables" author="dogancaglar">

        <!-- ========== JOURNAL ENTRIES TABLE ========== -->
        <createTable tableName="journal_entries">
            <column name="id" type="VARCHAR(128)">
                <constraints primaryKey="true" primaryKeyName="pk_journal_entries"/>
            </column>
            <column name="tx_type" type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(128)"/>
            <column name="reference_type" type="VARCHAR(64)"/>
            <column name="reference_id" type="VARCHAR(64)"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>

        <!-- ========== POSTINGS TABLE ========== -->
        <createTable tableName="postings">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" primaryKeyName="pk_postings"/>
            </column>
            <column name="journal_id" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>
            <column name="account_code" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>
            <column name="account_type" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="direction" type="VARCHAR(8)">
                <constraints nullable="false"/>
            </column>
            <column name="currency" type="VARCHAR(3)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>

        <!-- ========== RELATION & INDEXES ========== -->
        <addForeignKeyConstraint
                baseTableName="postings"
                baseColumnNames="journal_id"
                referencedTableName="journal_entries"
                referencedColumnNames="id"
                constraintName="fk_postings_journal"
                onDelete="CASCADE"/>

        <!-- ✅ Ensure idempotency & deduplication -->
        <!-- Journal entries are naturally unique by ID -->
        <addUniqueConstraint
                tableName="journal_entries"
                columnNames="id"
                constraintName="uq_journal_entries_id"/>

        <!-- Each posting is unique per journal_id + account_code -->
        <addUniqueConstraint
                tableName="postings"
                columnNames="journal_id, account_code"
                constraintName="uq_postings_journal_account"/>

        <!-- ✅ Helpful indexes for queries -->
        <createIndex
                indexName="idx_postings_journal_id"
                tableName="postings">
            <column name="journal_id"/>
        </createIndex>

        <createIndex
                indexName="idx_postings_account_code"
                tableName="postings">
            <column name="account_code"/>
        </createIndex>

    </changeSet>

</databaseChangeLog>