<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dogancaglar.paymentservice.adapter.outbound.persistence.mybatis.PaymentIntentMapper">
    <resultMap id="PaymentIntentResultMap"
               type="com.dogancaglar.paymentservice.adapter.outbound.persistence.entity.PaymentIntentEntity">
        <id property="paymentIntentId" column="payment_intent_id"/>
        <result property="buyerId" column="buyer_id"/>
        <result property="orderId" column="order_id"/>
        <result property="totalAmountValue" column="total_amount_value"/>
        <result property="currency" column="currency"/>
        <result property="status" column="status"/>
        <result property="paymentLinesJson" column="payment_lines"/>
        <result property="createdAt" column="created_at"
                typeHandler="com.dogancaglar.paymentservice.adapter.outbound.persistence.mybatis.typehandler.InstantTypeHandler"/>
        <result property="updatedAt" column="updated_at"
                typeHandler="com.dogancaglar.paymentservice.adapter.outbound.persistence.mybatis.typehandler.InstantTypeHandler"/>
    </resultMap>

    <select id="getMaxPaymentId" resultType="long">
        SELECT COALESCE(MAX(payment_id), 0) FROM payment_intents
    </select>


    <insert id="insert"
            parameterType="com.dogancaglar.paymentservice.adapter.outbound.persistence.entity.PaymentIntentEntity"
            >
        INSERT INTO payments (
        payment_intent_id,
        buyer_id,
        order_id,
        total_amount_value,
        currency,
        status,
        payment_lines,
        created_at,
        updated_at
        ) VALUES (
        #{paymentId},
        #{buyerId},
        #{orderId},
        #{totalAmountValue},
        #{currency},
        #{status},
        #{paymentLinesJson, jdbcType=OTHER},
        #{createdAt},
        #{updatedAt}
        )
    </insert>

    <select id="findById" resultMap="PaymentIntentResultMap">
        SELECT payment_id,
               buyer_id,
               order_id,
               total_amount_value,
               currency,
               status,
                payment_lines,
                created_at,
               updated_at
        FROM payment_intents
        WHERE payment_intent_id = #{id}
    </select>

    <delete id="deleteAll">
        DELETE FROM payment_intents
    </delete>

    <update id="update"
            parameterType="com.dogancaglar.paymentservice.adapter.outbound.persistence.entity.PaymentIntentEntity">
        UPDATE payment_intents SET
        order_id = #{orderId},
        buyer_id = #{buyerId},
        total_amount_value = #{totalAmountValue},
        currency = #{currency},
        status = #{status},
        payment_lines = #{paymentLinesJson, jdbcType=OTHER},
        created_at = #{createdAt},
        updated_at = #{updatedAt}
        WHERE payment_intent_id = #{paymentIntentId}
    </update>

    <delete id="deleteById">
        DELETE FROM payment_intents WHERE payment_intent_id = #{id}
    </delete>
</mapper>
