<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
<changeSet id="20240518-create-scheduled-payment-order-status-request" author="dogancaglar">
    <createTable tableName="scheduled_payment_order_request_repository">
        <column name="id" type="varchar(255)">
            <constraints primaryKey="true" nullable="false"/>
        </column>

        <column name="payload" type="jsonb">
            <constraints nullable="false"/>
        </column>

        <column name="send_after" type="timestamp with time zone">
            <constraints nullable="false"/>
        </column>

        <column name="created_at" type="timestamp">
            <constraints nullable="false"/>
        </column>
    </createTable>

    <rollback>
        <dropTable tableName="scheduled_payment_order_request_repository"/>
    </rollback>
</changeSet>

    <changeSet id="20240519-change-payload-to-text" author="dogancaglar">
        <modifyDataType
                tableName="scheduled_payment_order_request_repository"
                columnName="payload"
                newDataType="text"/>

        <rollback>
            <modifyDataType
                    tableName="scheduled_payment_order_request_repository"
                    columnName="payload"
                    newDataType="jsonb"/>
        </rollback>
    </changeSet>
</databaseChangeLog>