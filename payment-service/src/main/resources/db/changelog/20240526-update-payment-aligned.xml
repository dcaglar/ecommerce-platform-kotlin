<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <!-- Change payment_id to BIGINT -->
    <changeSet id="20240526-1-update-payments-paymentid-type" author="dogan">
        <modifyDataType tableName="payments" columnName="payment_id" newDataType="BIGINT"/>
        <rollback>
            <modifyDataType tableName="payments" columnName="payment_id" newDataType="VARCHAR(255)"/>
        </rollback>
    </changeSet>

    <!-- Add public_payment_id -->
    <changeSet id="20240526-2-add-public-payment-id" author="dogan">
        <addColumn tableName="payments">
            <column name="public_payment_id" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
        </addColumn>
        <rollback>
            <dropColumn tableName="payments" columnName="public_payment_id"/>
        </rollback>
    </changeSet>
    <changeSet id="20240526-2-add-public-payment-id" author="dogan">
        <addColumn tableName="payments">
            <column name="public_payment_id" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
        </addColumn>
        <rollback>
            <dropColumn tableName="payments" columnName="public_payment_id"/>
        </rollback>
    </changeSet>
    <changeSet id="20240525-add-updatedAt-to-payment" author="dogan">
        <addColumn tableName="payment_orders">

            <column name="updated_at" type="TIMESTAMP WITHOUT TIME ZONE" defaultValueDate="1970-01-01T00:00:00">
                <constraints nullable="false"/>
            </column>
        </addColumn>

        <rollback>
            <dropColumn tableName="payment_orders" columnName="updated_at"/>
        </rollback>
    </changeSet>
</databaseChangeLog>